# Dgraph schema file for GRU quiz

scalar (
  markdown: string
  positive-score: int
  negative-score: int
  name: string
  hour: int
  minute: int
  seconds: int
  email: string
  message: string
)

type Question {
  markdown: string
  positive-score: int
  negative-score: int
  tag: Tag
  option: Option
}

type Tag {
  name: string
  question: Question
}

type Option {
  markdown: string
  Question: Question
}

type Quiz {
  name: string
  duration: Time
  start-date: Time
  end-date: Time
  question: Question
  candidate: Candidate
}

type Time {
  hour: int
  minute: int
  second: int
}

type Candidate {
  name: string
  email: string
  auth-token: string
  ping: Ping
  quiz: Quiz
  response: Response
}

type Ping {
  time: Time
  message: string
}

type Response {
  question: Question
  answer: Option
}
